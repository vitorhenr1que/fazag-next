model Coordenador {
  id    String   @id @default(uuid())
  nome  String
  email String
  curso String
  text  String
  data  DateTime @default(now())
}

model Leads {
  id     String   @id @default(uuid())
  nome   String
  email  String
  tel    String
  course String
  contacted Boolean @default(false)
  data   DateTime @default(now())
}

model Matriculas {
  id            String @id @default(uuid())
  nome          String
  email         String
  tel           String
  cidade        String
  como_soube    String
  form_ingresso String
  curso         String
  redacao       String
}

model Ouvidoria {
  id            String   @id @default(uuid())
  nome          String
  email         String
  motivo        String
  procurouSetor String
  text          String
  vinculo       String
  data          DateTime @default(now())
}

model Post {
  id          String   @id @default(uuid())
  title       String
  description String?
  content     String
  image       String
  avatar      String?
  author      String
  published   Boolean
  date        DateTime @default(now())
}
